---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
export async function getStaticPaths() {
	const posts = await Astro.glob('../../blog/*.mdx')

	return posts.map(blog => ({
		params: {
			slug: blog.frontmatter.slug
		},
		props: {
			blog
		}
	}))
}

const { frontmatter, Content } = Astro.props.blog

const meta = {
	title: frontmatter.title + ' - Readn',
	description: frontmatter.title
}
---

<style lang="scss">
	.article{
		max-width: 50rem;
		margin: 2rem auto 4rem;
		background: white;
		border-radius: 2rem;
		padding: 2rem 3rem;
		box-shadow: 0px 16px 72px rgba(43, 72, 101, 0.05);


		&__details{
			display: flex;
			gap: 1rem;
			align-items: center;
		}

		&__date{
			font-family: var(--font-heading);
		}

		&__topic{
			color: var(--color-text-light-1)
		}

		&__bullet{
			width: .375rem;
			height: .375rem;
			border-radius: 100%;
			background: var(--color-text-light-1)
		}

		&__time{
			color: var(--color-text-light-1)
		}

		&__heading{
			font-size: 2rem;
			line-height: 1.5;
			font-weight: 400;
			margin: .5rem 0 1.25rem;
		}

		&__image{
			width: 100%;
			border-radius: 1rem;
		}

		&__main{
			margin-top: 1.25rem;
		}
	}
</style>

<DefaultLayout meta={meta}>
	<article class="article">
		<div class="article__details">
			<div class="article__date">
				{ frontmatter.publishedAt }
			</div>
			<div class="article__topic">
				{frontmatter.topic}
			</div>
			<div class="article__bullet"></div>
			<div class="article__time">
				{frontmatter.readingTime}
			</div>
		</div>
		<h1 class="article__heading">
			{ frontmatter.title }
		</h1>
		<img class="article__image" src={frontmatter.thumb}
		alt="Blog poster"/>
		<div class="article__main markdown">
			<Content />
		</div>
	</article>
</DefaultLayout>