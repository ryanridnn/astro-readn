---
import { v4 as uuidv4 } from 'uuid'
let color: string;
const propsColor: string = Astro.props.color

console.log(propsColor)

if(propsColor === 'gradient-green') {
	color = '#A7F0DF'
} else if(propsColor === 'gradient-dark-green') {
	color = '#256D85'
} else {
	color = '#FFF'
}

const gradientId = uuidv4()
---

<svg width={Astro.props.size} height={Astro.props.size} viewBox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M24.5 0L31.1172 17.8828L49 24.5L31.1172 31.1172L24.5 49L17.8828 31.1172L0 24.5L17.8828 17.8828L24.5 0Z" fill={`url(#${gradientId})`}/>
<defs>
<linearGradient id={gradientId}} x1="24.5" y1="0" x2="24.5" y2="49" gradientUnits="userSpaceOnUse">
<stop stop-color={color}/>
<stop offset="1" stop-color={color} stop-opacity="0.25"/>
</linearGradient>
</defs>
</svg>
